{
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base",
    "plugin:react-hooks/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "rules": {
    "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 2 }]
  }
}
